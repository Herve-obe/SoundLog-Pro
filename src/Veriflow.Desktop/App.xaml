<Application x:Class="Veriflow.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Veriflow.Desktop"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:views="clr-namespace:Veriflow.Desktop.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- NATIVE THEME ONLY -->
                <ResourceDictionary Source="/Styles/Theme.Pro.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- View Models DataTemplates -->
            <DataTemplate DataType="{x:Type vm:OffloadViewModel}">
                <views:OffloadView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PlayerViewModel}">
                <views:PlayerView />
            </DataTemplate>
            
            <!-- Fallback for String Placeholders -->
            <DataTemplate DataType="{x:Type sys:String}">
                <TextBlock Text="{Binding}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>