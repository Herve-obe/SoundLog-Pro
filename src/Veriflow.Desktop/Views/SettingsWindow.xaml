<Window x:Class="Veriflow.Desktop.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="Settings - Veriflow" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource Style.Window.Dialog}">

    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="SETTINGS" 
                   FontSize="{StaticResource Font.Size.Header}" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource Brush.Accent}"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- General Section -->
                <Border Background="{DynamicResource Brush.Panel}" 
                        BorderBrush="{DynamicResource Brush.Border}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="GENERAL" 
                                   FontWeight="SemiBold" 
                                   FontSize="{StaticResource Font.Size.Body}" 
                                   Foreground="{DynamicResource Brush.Accent}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Enable auto-save" 
                                  IsChecked="{Binding EnableAutoSave}" 
                                  Margin="0,5"/>
                        
                        <!-- Auto-Save Interval -->
                        <StackPanel Orientation="Horizontal" 
                                    Margin="20,5,0,5"
                                    IsEnabled="{Binding EnableAutoSave}">
                            <TextBlock Text="Interval:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBox Text="{Binding AutoSaveIntervalMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="50"
                                     Margin="0,0,5,0"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Text="minutes" 
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource Brush.Text.Secondary}"/>
                        </StackPanel>
                        
                        <CheckBox Content="Show confirmation dialogs" 
                                  IsChecked="{Binding ShowConfirmationDialogs}" 
                                  Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Session Section -->
                <Border Background="{DynamicResource Brush.Panel}" 
                        BorderBrush="{DynamicResource Brush.Border}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="SESSIONS" 
                                   FontWeight="SemiBold" 
                                   FontSize="{StaticResource Font.Size.Body}" 
                                   Foreground="{DynamicResource Brush.Accent}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Default session folder:" 
                                   Opacity="0.7" 
                                   Margin="0,5,0,5"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding DefaultSessionFolder, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="0,0,10,0"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Browse..." 
                                    Command="{Binding BrowseFolderCommand}"
                                    Padding="10,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Reset to Defaults (Left) -->
            <Button Grid.Column="0"
                    Width="140" 
                    Height="35"
                    HorizontalAlignment="Left"
                    Command="{Binding ResetToDefaultsCommand}"
                    Style="{StaticResource TextLinkButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,4C14.1,4 16.1,4.8 17.6,6.3C20.7,9.4 20.7,14.5 17.6,17.6C15.8,19.5 13.3,20.4 10.9,20.3V22.3C13.9,22.4 17,21.3 19.2,19.1C23.1,15.2 23.1,8.7 19.2,4.8C17.3,2.9 14.7,2 12,2C9.3,2 6.7,2.9 4.8,4.8C0.9,8.7 0.9,15.2 4.8,19.1C6.7,21 9.3,21.9 12,21.9V19.9C9.7,19.9 7.5,19 5.9,17.4C3.1,14.6 3.1,10.1 5.9,7.3C7.5,5.8 9.6,4.9 12,4.9V4Z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Width="12" Height="12" Stretch="Uniform" Margin="0,0,4,0"/>
                    <TextBlock Text="Reset to Defaults"/>
                </StackPanel>
            </Button>
            
            <!-- OK/Cancel (Right) -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="OK" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0"
                        Click="OkButton_Click"
                        Background="{DynamicResource Brush.Accent}"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Cancel" 
                        Width="100" 
                        Height="35"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
