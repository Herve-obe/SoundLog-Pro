<Window x:Class="Veriflow.Desktop.Views.VideoPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="Video Preview" Height="360" Width="640"
        WindowStyle="ToolWindow"
        ResizeMode="CanResize"
        Topmost="True"
        Background="{StaticResource Brush.Background}"
        ShowInTaskbar="False"
        Style="{StaticResource {x:Type Window}}">
    <Grid Background="{StaticResource Brush.Panel}">
        <vlc:VideoView MediaPlayer="{Binding PreviewPlayer}"/>
    </Grid>
</Window>
