<Window x:Class="Veriflow.Desktop.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock Text="VERIFLOW PRO" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="This software uses code of FFmpeg licensed under the LGPLv2.1 and its source can be downloaded here:" 
                       FontSize="12" Foreground="#DDDDDD" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,5"/>

            <TextBlock HorizontalAlignment="Center">
                <Hyperlink NavigateUri="https://ffmpeg.org" RequestNavigate="Hyperlink_RequestNavigate">
                    https://ffmpeg.org
                </Hyperlink>
            </TextBlock>

            <Button Content="CLOSE" IsCancel="True" Click="Close_Click"
                    Width="100" Height="30" Margin="0,30,0,0"
                    Background="#333" Foreground="#CCC" BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
