<UserControl x:Class="Veriflow.Desktop.Views.VideoPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:shared="clr-namespace:Veriflow.Desktop.Views.Shared"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024"
             Focusable="True"
             FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
             AllowDrop="True">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Drop">
            <i:InvokeCommandAction Command="{Binding DropFileCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="PreviewKeyDown">
             <i:InvokeCommandAction Command="{Binding KeyDownCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
        <i:EventTrigger EventName="PreviewKeyUp">
             <i:InvokeCommandAction Command="{Binding KeyUpCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.InputBindings>
        <KeyBinding Key="Space" Command="{Binding TogglePlayPauseCommand}"/>
        <KeyBinding Key="Return" Command="{Binding StopCommand}"/>
        
        <!-- Frame Navigation: Left/Right handled by PreviewKeyDown/KeyUp jog system -->
        
        <!-- 1-Second Jumps: Up/Down -->
        <KeyBinding Key="Up" Command="{Binding ForwardCommand}"/>
        <KeyBinding Key="Down" Command="{Binding RewindCommand}"/>
        
        <!-- File Navigation: B/N for Previous/Next -->
        <KeyBinding Key="B" Command="{Binding NavigatePreviousCommand}"/>
        <KeyBinding Key="N" Command="{Binding NavigateNextCommand}"/>
        
        <!-- Logging Shortcuts -->
        <KeyBinding Key="I" Command="{Binding SetInCommand}"/>
        <KeyBinding Key="O" Command="{Binding SetOutCommand}"/>
        <KeyBinding Key="T" Command="{Binding TagClipCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Round Filled Slider Style (For Scrubber) -->
        <Style x:Key="RoundFilledSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Bright}"/>
            <Setter Property="IsSelectionRangeEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.Resources>
                                <Style x:Key="BlueTrackRepeatButtonStyle" TargetType="RepeatButton">
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                                    <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Grid Background="Transparent">
                                                    <Rectangle Fill="{TemplateBinding Background}" Height="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style x:Key="TransparentRepeatButtonStyle" TargetType="RepeatButton">
                                     <Setter Property="OverridesDefaultStyle" Value="True"/>
                                     <Setter Property="Background" Value="Transparent"/>
                                     <Setter Property="Focusable" Value="False"/>
                                     <Setter Property="IsTabStop" Value="False"/>
                                     <Setter Property="Template">
                                         <Setter.Value>
                                             <ControlTemplate TargetType="RepeatButton">
                                                 <Rectangle Fill="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
                                             </ControlTemplate>
                                         </Setter.Value>
                                     </Setter>
                                 </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="26"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track Layer -->
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="2" Background="{DynamicResource Brush.Border.Secondary}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5,0"/>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource BlueTrackRepeatButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource TransparentRepeatButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="12" Height="12" Fill="#FFFFFF" Stroke="{DynamicResource Brush.Text.Dark}" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.Background}">
        <!-- VIDEO PLAYER SURFACE ONLY -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Transport (Reserved/Hidden here, managed by Parent) -->
                <RowDefinition Height="*"/>    <!-- Video Surface -->
                <RowDefinition Height="30"/>   <!-- Scrubber -->
                <RowDefinition Height="Auto"/> <!-- Mixer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <!-- Video Icon -->
                        <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z"
                              Fill="{DynamicResource Brush.Accent}"
                              Height="20" Width="20" Stretch="Uniform"
                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                              
                        <TextBlock Text="PLAYER VIDEO" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="{Binding FileName, TargetNullValue='No file loaded'}" FontSize="{StaticResource Font.Size.Header}" FontWeight="Bold" Foreground="{DynamicResource Brush.Text.Bright}" Margin="0,2"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding CurrentTimeDisplay}" FontSize="{StaticResource Font.Size.Large}" FontFamily="Consolas" Foreground="{DynamicResource Brush.Accent}"/>
                            <TextBlock Text=" / " FontSize="{StaticResource Font.Size.Large}" Opacity="0.5"/>
                            <TextBlock Text="{Binding TotalTimeDisplay}" FontSize="{StaticResource Font.Size.Large}" FontFamily="Consolas" Opacity="0.5"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Logging Controls (Right Aligned) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Visibility="{Binding IsVideoLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel.Resources>
                         <Style TargetType="Button" BasedOn="{StaticResource ContextualActionButtonStyle}">
                             <Setter Property="Height" Value="24"/>
                             <Setter Property="Margin" Value="5,0"/>
                             <Setter Property="FontSize" Value="11"/>
                             <Setter Property="Padding" Value="10,0"/>
                         </Style>
                    </StackPanel.Resources>
                    
                    <Button x:Name="MarkInButton" Command="{Binding SetInCommand}" ToolTip="Set In Point (I)" Focusable="False">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,17V16H9V14H11V13H12V14H14V16H12V17H11M15,8.5V10H9V8.5H15Z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                  Width="16" Height="16" Stretch="Uniform" Margin="0,0,6,0"/>
                            <TextBlock Text="Mark In"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="MarkOutButton" Command="{Binding SetOutCommand}" ToolTip="Set Out Point (O)" Focusable="False">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M9,8.5H15V10H9V8.5M11,13H12V14H14V16H12V17H11V16H9V14H11V13Z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                  Width="16" Height="16" Stretch="Uniform" Margin="0,0,6,0"/>
                            <TextBlock Text="Mark Out"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="TagClipButton" Command="{Binding TagClipCommand}" Background="{DynamicResource Brush.Accent}" BorderBrush="{DynamicResource Brush.Accent}" Foreground="Black" Focusable="False" ToolTip="Tag Clip (T)">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M5.5,9A1.5,1.5 0 0,0 7,7.5A1.5,1.5 0 0,0 5.5,6A1.5,1.5 0 0,0 4,7.5A1.5,1.5 0 0,0 5.5,9M17.41,11.58C17.77,11.94 18,12.44 18,13C18,13.55 17.78,14.05 17.41,14.41L12.41,19.41C12.05,19.77 11.55,20 11,20C10.45,20 9.95,19.78 9.58,19.41L2.59,12.42C2.22,12.05 2,11.55 2,11V6C2,4.89 2.89,4 4,4H9C9.55,4 10.05,4.22 10.41,4.58L17.41,11.58M13.54,5.71L14.54,4.71L21.41,11.58C21.78,11.94 22,12.45 22,13C22,13.55 21.78,14.05 21.42,14.41L16.04,19.79L15.04,18.79L20.75,13L13.54,5.71Z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                  Width="16" Height="16" Stretch="Uniform" Margin="0,0,6,0"/>
                            <TextBlock Text="Tag Clip"/>
                        </StackPanel>
                    </Button> 
                </StackPanel>
            </Grid>

            <!-- Video Surface (Reduced Size via Margins) -->
            <Border Grid.Row="2" Background="{DynamicResource Brush.Panel}" Margin="0,0,0,15" VerticalAlignment="Stretch"
                    Visibility="{Binding IsVideoLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
                <vlc:VideoView x:Name="VideoViewControl" MediaPlayer="{Binding Player}" />
            </Border>

            <!-- Scrubber (Moved Bottom) -->
            <Grid Grid.Row="3" VerticalAlignment="Center"
                  Visibility="{Binding IsVideoLoaded, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Slider Value="{Binding PlaybackPercent}" Maximum="1.0" LargeChange="0.1" 
                        Focusable="False" VerticalAlignment="Center" 
                        IsMoveToPointEnabled="True"
                        Style="{StaticResource RoundFilledSliderStyle}"
                        Tag="Scrubber">
                   <i:Interaction.Triggers>
                        <!-- Keep Behaviours for Begin/End Seek logic (Backup) -->
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:CallMethodAction TargetObject="{Binding}" MethodName="BeginSeek"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="PreviewMouseUp">
                            <i:CallMethodAction TargetObject="{Binding}" MethodName="EndSeek"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Slider>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
