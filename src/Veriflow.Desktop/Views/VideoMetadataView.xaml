<UserControl x:Class="Veriflow.Desktop.Views.VideoMetadataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Padding="10" VerticalAlignment="Stretch" Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1,0,0,0" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header Title -->
            <TextBlock Text="METADATA" Style="{StaticResource HeaderStyle}" Margin="0,0,0,20"/>

            <!-- VIDEO METADATA SCROLLVIEWER -->
            <ScrollViewer Grid.Row="1" Focusable="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ScrollViewer.Resources>
                        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                </ScrollViewer.Resources>
                <StackPanel>
                    <!-- 1. FILE INFO -->
                    <Expander Header="FILE INFO" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Name:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Filename}" TextTrimming="CharacterEllipsis" Foreground="White"/>
                            
                            <TextBlock Grid.Row="1" Text="Container:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Container}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="2" Text="Size:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Size}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="3" Text="Duration:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Duration}" FontFamily="Consolas" Foreground="White" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>

                    <!-- 2. VIDEO STREAM -->
                    <Expander Header="VIDEO STREAM" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Codec:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.Codec}" TextWrapping="Wrap" Foreground="White"/>

                            <TextBlock Grid.Row="1" Text="Resolution:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Resolution}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="2" Text="Aspect Ratio:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AspectRatio}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="3" Text="Frame Rate:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentVideoMetadata.FrameRate}" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="4" Text="Bit Depth:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentVideoMetadata.BitDepth}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="5" Text="Chroma:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ChromaSubsampling}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="6" Text="Color Space:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ColorSpace}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="7" Text="Scan Type:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding CurrentVideoMetadata.ScanType}" Foreground="White" Margin="0,2,0,0"/>

                            <TextBlock Grid.Row="8" Text="GOP Struct:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CurrentVideoMetadata.GopStructure}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="9" Text="Bitrate:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding CurrentVideoMetadata.Bitrate}" Foreground="White" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>

                    <!-- 3. AUDIO & TIMECODE -->
                    <Expander Header="AUDIO &amp; TIMECODE" IsExpanded="False" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="5,0,5,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Audio Format:" Foreground="{DynamicResource Brush.Text.Secondary}"/>
                            <TextBlock Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioFormat}" Foreground="White"/>

                            <TextBlock Grid.Row="1" Text="Channels:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentVideoMetadata.AudioChannels}" Foreground="White" Margin="0,2,0,0"/>
                            
                            <TextBlock Grid.Row="2" Text="Start TC:" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,2,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentVideoMetadata.StartTimecode}" FontFamily="Consolas" Foreground="White" FontWeight="Bold" Margin="0,2,0,0"/>
                        </Grid>
                    </Expander>
                    <!-- 4. LOGGED CLIPS -->
                    <Expander Header="LOGGED CLIPS" IsExpanded="True" Style="{StaticResource ProExpanderStyle}" Focusable="False">
                        <Grid Margin="0,0,0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- PENDING CLIP DISPLAY -->
                            <Border Grid.Row="0" Margin="0,0,0,10" Background="{StaticResource Brush.Panel.Input}" BorderBrush="#444" BorderThickness="1" Padding="5" CornerRadius="3"
                                    Visibility="{Binding IsLoggingPending, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="CURRENT CLIP" Foreground="{DynamicResource Brush.Accent}" FontWeight="Bold" FontSize="{StaticResource Font.Size.Micro}" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,2">
                                        <TextBlock Text="IN:" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Mini}"/>
                                        <TextBlock Text="{Binding CurrentMarkInDisplay}" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Right" FontSize="{StaticResource Font.Size.Mini}"/>
                                    </Grid>
                                    <Grid>
                                        <TextBlock Text="OUT:" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Mini}"/>
                                        <TextBlock Text="{Binding CurrentMarkOutDisplay}" Foreground="White" FontFamily="Consolas" HorizontalAlignment="Right" FontSize="{StaticResource Font.Size.Mini}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <ListBox Grid.Row="1" ItemsSource="{Binding TaggedClips}" BorderThickness="0" Background="Transparent">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="5">
                                            <!-- Editing mode border -->
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                            <Setter Property="Background" Value="#1A1A1A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Rectangle Width="4" Fill="{Binding TagColor}" Margin="0,0,5,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <!-- Notes - Editable when IsEditing -->
                                                    <TextBlock Text="{Binding Notes}" Foreground="White" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    
                                                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" 
                                                             Foreground="White" FontWeight="Bold" Background="#222" BorderBrush="{DynamicResource Brush.Accent}"
                                                             Padding="2" Margin="0,0,0,3">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>
                                                    
                                                    <!-- Timecodes -->
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding InPoint}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                        <TextBlock Text=" - " Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                        <TextBlock Text="{Binding OutPoint}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                        <TextBlock Text=" (" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                        <TextBlock Text="{Binding Duration}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                        <TextBlock Text=")" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="{StaticResource Font.Size.Micro}"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Edit mode buttons -->
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        
                                                        <Button Content="âœ“ Save" Height="20" Padding="5,0" FontSize="{StaticResource Font.Size.Micro}" Margin="0,0,5,0"
                                                                Command="{Binding DataContext.SaveClipEditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Style="{StaticResource ContextualActionButtonStyle}" Background="{StaticResource Brush.Success}" BorderBrush="{StaticResource Brush.Success}"/>
                                                        
                                                        <Button Content="âœ— Cancel" Height="20" Padding="5,0" FontSize="{StaticResource Font.Size.Micro}" Margin="0,0,5,0"
                                                                Command="{Binding DataContext.CancelClipEditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Style="{StaticResource ContextualActionButtonStyle}" Background="{StaticResource Brush.Error.Button}" BorderBrush="{StaticResource Brush.Error.Button}"/>
                                                        
                                                        <Button Content="ðŸ—‘ Delete" Height="20" Padding="5,0" FontSize="{StaticResource Font.Size.Micro}"
                                                                Command="{Binding DataContext.DeleteClipCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource ContextualActionButtonStyle}" Background="#555" BorderBrush="#555"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Double-click to enter edit mode -->
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftDoubleClick" 
                                                              Command="{Binding DataContext.EnterEditModeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Expander>
                </StackPanel>
            </ScrollViewer>


            <!-- BOTTOM ACTIONS -->
            <!-- Action Buttons Area (Bottom) -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <Button Command="{Binding OpenFileCommand}"
                        Height="26" ToolTip="Import Video File" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,20H4C2.89,20 2,19.1 2,18V6C2,4.89 2.89,4 4,4H10L12,6H19A2,2 0 0,0 21,8H21L4,8V18L6.14,10H23.21L20.93,18.5C20.7,19.37 19.92,20 19,20Z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Open File"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding UnloadMediaCommand}"
                        Height="26" ToolTip="Unload current media" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Close File"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SendFileToTranscodeCommand}"
                        Height="26" ToolTip="Send current file to Transcode Page" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,3C7.58,3 4,4.79 4,7C4,9.21 7.58,11 12,11C16.42,11 20,9.21 20,7C20,4.79 16.42,3 12,3M4,9V12C4,14.21 7.58,16 12,16C16.42,16 20,14.21 20,12V9C20,11.21 16.42,13 12,13C7.58,13 4,11.21 4,9M4,14V17C4,19.21 7.58,21 12,21C16.42,21 20,19.21 20,17V14C20,16.21 16.42,18 12,18C7.58,18 4,16.21 4,14Z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Transcode"/>
                    </StackPanel>
                </Button>
                        
                <Button Command="{Binding ExportLogsCommand}"
                        Height="26" ToolTip="Export Tagged Clips" Margin="0,0,0,5"
                        Style="{StaticResource ContextualActionButtonStyle}" Background="{StaticResource Brush.Success}" BorderBrush="{StaticResource Brush.Success}" Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M23,12L19,8V11H10V13H19V16M1,18V6C1,4.89 1.89,4 3,4H15A2,2 0 0,1 17,6V9H15V6H3V18H15V15H17V18A2,2 0 0,1 15,20H3A2,2 0 0,1 1,18Z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Export EDL/ALE"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding UpdateReportCommand}"
                        Height="26" ToolTip="Update Report Note" Margin="0,0,0,0"
                        Style="{StaticResource ContextualActionButtonStyle}" Focusable="False">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M14,10H19.5L14,4.5V10M5,3H15L21,9V19A2,2 0 0,1 19,21H5C3.89,21 3,20.1 3,19V5C3,3.89 3.89,3 5,3M14.5,17.5L12.5,15.5L14,14L16,16L20.5,11.5L22,13L16,19L14.5,17.5Z"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Update Notes"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
