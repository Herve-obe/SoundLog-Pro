<UserControl x:Class="Veriflow.Desktop.Views.OffloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Section 1 : SOURCE -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,20" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialDesign:PackIcon Kind="FolderSearch" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="SOURCE MÉDIA" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0" Kind="SdStorage" VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20" Opacity="0.7"/>

                    <TextBox Grid.Column="1" Text="{Binding SourcePath}"
                             materialDesign:HintAssist.Hint="Chemin du dossier source"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:HintAssist.FloatingScale="0.9"
                             Background="#454545"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             AllowDrop="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="PreviewDragOver">
                                <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="PreviewDrop">
                                <b:InvokeCommandAction Command="{Binding DropSourceCommand}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </TextBox>
                    
                    <Button Grid.Column="2" Command="{Binding PickSourceCommand}" Content="OUVRIR" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Foreground="White" BorderBrush="White"
                            VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Section 2 : DESTINATIONS -->
        <materialDesign:Card Grid.Row="1" Margin="0,0,0,20" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <materialDesign:PackIcon Kind="BackupRestore" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                    <TextBlock Text="SECURE COPY" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>

                <!-- Destination A -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <materialDesign:PackIcon Grid.Column="0" Kind="Harddisk" VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20" Opacity="0.7"/>
                    
                    <TextBox Grid.Column="1" Text="{Binding Destination1Path}"
                             materialDesign:HintAssist.Hint="Destination Principale (A)" 
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:HintAssist.FloatingScale="0.9"
                             Background="#454545"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             AllowDrop="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="PreviewDragOver">
                                <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="PreviewDrop">
                                <b:InvokeCommandAction Command="{Binding DropDest1Command}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </TextBox>
                    
                    <Button Grid.Column="2" Command="{Binding PickDest1Command}" Content="OUVRIR" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Foreground="White" BorderBrush="White"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Destination B -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0" Kind="HarddiskPlus" VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20" Opacity="0.7"/>

                    <TextBox Grid.Column="1" Text="{Binding Destination2Path}"
                             materialDesign:HintAssist.Hint="Destination Secondaire (B) - Optionnel"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:HintAssist.FloatingScale="0.9"
                             Background="#454545"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             AllowDrop="True"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,10,0" VerticalAlignment="Center">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="PreviewDragOver">
                                <b:InvokeCommandAction Command="{Binding DragOverCommand}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="PreviewDrop">
                                <b:InvokeCommandAction Command="{Binding DropDest2Command}" PassEventArgsToCommand="True"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </TextBox>

                    <Button Grid.Column="2" Command="{Binding PickDest2Command}" Content="OUVRIR" 
                            Style="{StaticResource MaterialDesignOutlinedButton}" 
                            Foreground="White" BorderBrush="White"
                            VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Spacer -->
        <Border Grid.Row="2"/>

        <!-- Section 3 : ACTIONS -->
        <StackPanel Grid.Row="3">
            <Button Command="{Binding StartCopyCommand}" Content="DÉMARRER LA COPIE" 
                    Height="50" FontSize="18" Margin="0,0,0,20" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Foreground="White"
                    BorderBrush="White"
                    BorderThickness="2"/>
            
            <ProgressBar Value="{Binding ProgressValue}" Maximum="100" Height="20" IsIndeterminate="False"/>
            
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding CurrentHashDisplay}" Opacity="0.9" Foreground="White" 
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding LogText}" Opacity="0.7" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                     <TextBlock Text="ETA: " Opacity="0.9" Foreground="White" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                     <TextBlock Text="{Binding TimeRemainingDisplay}" Foreground="White" Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                </StackPanel>

                <TextBlock Grid.Column="2" Text="{Binding CurrentSpeedDisplay}" Foreground="White" 
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
