<UserControl x:Class="Veriflow.Desktop.Views.MediaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             xmlns:vm="clr-namespace:Veriflow.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1024">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <!-- Folder Tree Item Style -->
        <HierarchicalDataTemplate x:Key="FolderTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                      Fill="#FFC107" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="#DDDDDD" FontSize="13"/>
            </StackPanel>
        </HierarchicalDataTemplate>

        <HierarchicalDataTemplate x:Key="DriveTemplate" ItemsSource="{Binding Folders}">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <Path Data="M6,2H18A2,2 0 0,1 20,4V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V4A2,2 0 0,1 6,2Z" 
                      Fill="#90A4AE" Height="14" Width="14" Stretch="Uniform" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/> <!-- Explorer -->
            <ColumnDefinition Width="*"/>   <!-- Browser -->
            <ColumnDefinition Width="300"/> <!-- Metadata -->
        </Grid.ColumnDefinitions>
        
        <!-- COL 1: EXPLORER -->
        <Border Grid.Column="0" BorderBrush="#333333" BorderThickness="0,0,1,0" Background="#1E1E1E">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="EXPLORATEUR" Style="{StaticResource HeaderStyle}"/>
                
                <TreeView Grid.Row="1" ItemsSource="{Binding Drives}" Background="Transparent" BorderThickness="0" Margin="5"
                          ItemTemplate="{StaticResource DriveTemplate}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>

        <!-- COL 2: BROWSER -->
        <Border Grid.Column="1" Background="#121212">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="MÉDIAS" Style="{StaticResource HeaderStyle}"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding FileList}" 
                         Background="Transparent" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="100" Height="120" Margin="5" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Icon Area -->
                                <Grid Grid.Row="0">
                                    <!-- Base File Icon -->
                                    <Path Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V13H13V18H15M11,18V13H9V18H11M7,18V13H5V18H7" 
                                          Fill="#555555" Stretch="Uniform" Margin="20"/>

                                    <!-- Hover/Playing Overlay -->
                                    <Grid x:Name="Overlay" Background="#AA000000" Visibility="Hidden">
                                         <Button Command="{Binding DataContext.PreviewFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                 CommandParameter="{Binding}"
                                                 Style="{StaticResource Style.Transport.Base}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                                 Width="40" Height="40" BorderBrush="White">
                                             <Grid>
                                                 <!-- Play Icon (Default) -->
                                                 <Path x:Name="PlayIcon" Data="M8,5.14V19.14L19,12.14L8,5.14Z" Fill="White" Stretch="Uniform" Margin="2" Visibility="Visible"/>
                                                 <!-- Stop Icon (Hidden) -->
                                                 <Path x:Name="StopIcon" Data="M6,6H18V18H6V6Z" Fill="#FF5252" Stretch="Uniform" Margin="4" Visibility="Collapsed"/>
                                             </Grid>
                                         </Button>
                                    </Grid>
                                </Grid>

                                <!-- Filename -->
                                <TextBlock Grid.Row="1" Text="{Binding Name}" TextTrimming="CharacterEllipsis" 
                                           Foreground="#DDDDDD" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0" ToolTip="{Binding Name}"/>
                            
                            </Grid>
                            <DataTemplate.Triggers>
                                <!-- Show Overlay on Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                
                                <!-- Show Overlay and Toggle Icons when Playing -->
                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                    <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="PlayIcon" Property="Visibility" Value="Collapsed"/>
                                    <Setter TargetName="StopIcon" Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- COL 3: METADATA -->
        <Border Grid.Column="2" BorderBrush="#333333" BorderThickness="1,0,0,0" Background="#1E1E1E">
            <Grid>
                 <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="MÉTADONNÉES" Style="{StaticResource HeaderStyle}"/>
                
                <!-- Placeholder for Metadata -->
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="{Binding SelectedMedia.Name, StringFormat='Nom: {0}'}" Foreground="White" Margin="0,0,0,5" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding SelectedMedia.FullName, StringFormat='Chemin: {0}'}" Foreground="#AAAAAA" Margin="0,0,0,5" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding SelectedMedia.CreationTime, StringFormat='Créé le: {0}'}" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedMedia.Length, StringFormat='Taille: {0} octets'}" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
