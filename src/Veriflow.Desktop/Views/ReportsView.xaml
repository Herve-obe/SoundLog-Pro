                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Margin" Value="0,10,0,2"/>
                                </Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </StackPanel.Resources>


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DATE"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Manual Text Field -->
                                        <TextBox Grid.Column="0" Text="{Binding Header.ReportDate, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <!-- Calendar Trigger (Renamed for Audio) -->
                                        <ToggleButton x:Name="DateToggleAudio" Grid.Column="1" Width="26" Height="26" Margin="2,0,0,0"
                                                      IsChecked="{Binding IsAudioCalendarOpen}" Focusable="False"
                                                      Style="{StaticResource Style.Toggle.Calendar.Audio}">
                                            <Path Data="M7,10H12V15H7M19,19H5V8H19M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.9 20.1,3 19,3Z" 
                                                  Stretch="Uniform" Fill="White" Width="12" Height="12"/>
                                        </ToggleButton>
                                        
                                        <!-- Date Popup -->
                                        <Popup IsOpen="{Binding IsChecked, ElementName=DateToggleAudio}" StaysOpen="False" Placement="Bottom" PlacementTarget="{Binding ElementName=DateToggleAudio}">
                                            <Border Background="{StaticResource Brush.Panel}" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                                                <Calendar SelectedDate="{Binding Header.CalendarDate}" Style="{StaticResource ProCalendarStyleAudio}"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </StackPanel>
                                
                                <!-- Right Column Empty as requested -->
                                <StackPanel Grid.Column="2"/> 
                            </Grid>

                            <!-- PROJECT NAME -->
                            <TextBlock Text="PROJECT NAME"/>
                            <TextBox Text="{Binding Header.ProjectName, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- SOUND MIXER -->
                            <TextBlock Text="SOUND MIXER"/>
                            <TextBox Text="{Binding Header.SoundMixer, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- BOOM OP. -->
                            <TextBlock Text="BOOM OP."/>
                            <TextBox Text="{Binding Header.BoomOperator, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- LOCATION -->
                            <TextBlock Text="LOCATION"/>
                            <TextBox Text="{Binding Header.Location, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- TECHNICAL INFO ROW 1 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="TIMECODE RATE"/>
                                    <TextBox Text="{Binding Header.TimecodeRate, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="FILES TYPE"/>
                                    <TextBox Text="{Binding Header.FilesType, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>



                        </StackPanel>
                        </Grid>
                        
                        <!-- CLEAR BUTTON (Moved inside ScrollViewer, below forms) -->
                        <Button Command="{Binding ClearInfosCommand}" Height="30" Margin="5,0,5,20" Style="{StaticResource ContextualActionButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                <TextBlock Text="Clear Infos" Margin="0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- EXPORT BUTTONS & CLEAR (Vertical like Player, Full Width) -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">


                    <Button Command="{Binding ExportSessionEDLCommand}" 
                            Height="30" Margin="0,0,0,5">
                         <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ContextualActionButtonStyle}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentReportType}" Value="Audio">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
