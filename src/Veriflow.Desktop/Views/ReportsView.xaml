<UserControl x:Class="Veriflow.Desktop.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veriflow.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- HEADER -->
            <RowDefinition Height="*"/>    <!-- CONTENT -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
             <!-- File Document Icon -->
             <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                   Fill="{DynamicResource Brush.Accent}"
                   Height="20" Width="20" Stretch="Uniform"
                   VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="REPORTS" Style="{StaticResource HeaderStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- CONTENT PLACEHOLDER -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                  Fill="#555555" Height="64" Width="64" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Reports generation coming soon" 
                       FontSize="20" FontWeight="SemiBold" Foreground="#888888" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
