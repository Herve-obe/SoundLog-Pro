<Window x:Class="SoundLogPro.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SoundLogPro.Desktop"
        mc:Ignorable="d"
        Title="SoundLog Pro" Height="768" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource MaterialDesignDivider}">
            <StackPanel Margin="10">
                <TextBlock Text="SOUNDLOG PRO" FontSize="20" FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
                
                <Button Command="{Binding NavigatePlayerCommand}" Content="PLAYER" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left" Height="50" Margin="0,5"/>
                <Button Command="{Binding NavigateOffloadCommand}" Content="OFFLOAD" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left" Height="50" Margin="0,5"/>
                <Button Command="{Binding NavigateReportsCommand}" Content="RAPPORTS" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left" Height="50" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Padding="20">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <TextBlock Text="{Binding Content}" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                        </Grid>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </Border>
    </Grid>
</Window>
