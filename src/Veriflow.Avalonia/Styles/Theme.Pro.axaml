    <!-- Window Dialog Style -->
    <Style Selector="Window.Dialog">
        <Setter Property="SystemDecorations" Value="None"/>
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        <Setter Property="ExtendClientAreaChromeHints" Value="NoChrome"/>
        <Setter Property="ExtendClientAreaTitleBarHeightHint" Value="40"/>
        <Setter Property="Background" Value="{StaticResource Brush.Background.Panel}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- VIEW FILTER TOGGLE BUTTONS (Video/Audio) -->
    <!-- ============================================ -->
    
    <Style Selector="ToggleButton.ViewFilter">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Opacity" Value="0.2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- Checked State: Full Opacity -->
    <Style Selector="ToggleButton.ViewFilter:checked">
        <Setter Property="Opacity" Value="1.0"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- CHROMELESS TITLE BAR SYSTEM -->
    <!-- Google/VS Code Style -->
    <!-- ============================================ -->
    
    <!-- Title Bar Container -->
    <Style Selector="Grid.ChromelessTitleBar">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Panel}"/>
        <Setter Property="Height" Value="40"/>
    </Style>
    
    <!-- App Icon Style -->
    <Style Selector="Image.AppIcon">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Margin" Value="12,0,8,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- MENU BAR STYLES -->
    <!-- ============================================ -->
    
    <!-- Menu Container -->
    <Style Selector="Menu.TitleBarMenu">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Top Level Menu Item -->
    <Style Selector="Menu.TitleBarMenu > MenuItem">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- Top Level Menu Item Hover -->
    <Style Selector="Menu.TitleBarMenu > MenuItem:pointerover">
        <Setter Property="Background" Value="#1AFFFFFF"/>
    </Style>
    
    <!-- Top Level Menu Item Selected/Open -->
    <Style Selector="Menu.TitleBarMenu > MenuItem:selected">
        <Setter Property="Background" Value="#1AFFFFFF"/>
    </Style>
    
    <!-- Dropdown Menu Popup -->
    <Style Selector="Menu.TitleBarMenu MenuItem > Popup">
        <Setter Property="Placement" Value="BottomEdgeAlignedLeft"/>
        <Setter Property="PlacementGravity" Value="BottomLeft"/>
        <Setter Property="VerticalOffset" Value="0"/>
    </Style>
    
    <!-- Dropdown Menu Container -->
    <Style Selector="Menu.TitleBarMenu MenuItem Popup Border">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Elevated}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="MinWidth" Value="180"/>
    </Style>
    
    <!-- Dropdown Menu Items -->
    <Style Selector="Menu.TitleBarMenu MenuItem MenuItem">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Margin" Value="2"/>
    </Style>
    
    <!-- Dropdown Menu Item Hover -->
    <Style Selector="Menu.TitleBarMenu MenuItem MenuItem:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
    </Style>
    
    <!-- Menu Separator -->
    <Style Selector="Menu.TitleBarMenu Separator">
        <Setter Property="Background" Value="{StaticResource Brush.Divider}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="4,4"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- CENTERED TITLE -->
    <!-- ============================================ -->
    
    <Style Selector="TextBlock.CenteredTitle">
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- WINDOW CONTROL BUTTONS WITH CONTROL TEMPLATE -->
    <!-- ============================================ -->
    
    <!-- Window Control Button Base with Template -->
    <Style Selector="Button.WindowControlButton">
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- Generic Hover -->
    <Style Selector="Button.WindowControlButton:pointerover">
        <Setter Property="Background" Value="#2A2D2E"/>
    </Style>
    
    <Style Selector="Button.WindowControlButton:pointerover TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Close Button with Red Hover -->
    <Style Selector="Button.CloseButton">
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="Button.CloseButton:pointerover /template/ Border#PART_Border">
        <Setter Property="Background" Value="#E81123"/>
    </Style>
    
    <Style Selector="Button.CloseButton:pointerover TextBlock">
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    
    <!-- Window Control Icon Base -->
    <Style Selector="TextBlock.WindowControlIcon">
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Minimize Icon -->
    <Style Selector="TextBlock.WindowControlIcon.Minimize">
        <Setter Property="Text" Value="&#xE921;"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Maximize Icon -->
    <Style Selector="TextBlock.WindowControlIcon.Maximize">
        <Setter Property="Text" Value="&#xE922;"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Restore Icon (when maximized) -->
    <Style Selector="TextBlock.WindowControlIcon.Restore">
        <Setter Property="Text" Value="&#xE923;"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- Close Icon -->
    <Style Selector="TextBlock.WindowControlIcon.Close">
        <Setter Property="Text" Value="&#xE8BB;"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- MODE TOGGLE (Segmented Control / Tabs) -->
    <!-- ============================================ -->
    <Style Selector="RadioButton.ModeToggle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Standard}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
             <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="{TemplateBinding Padding}"/>
                </Border>
             </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="RadioButton.ModeToggle:checked">
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
    </Style>
    
    <Style Selector="RadioButton.ModeToggle:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Text.Tertiary}"/>
    </Style>
    
    <Style Selector="RadioButton.ModeToggle:checked:pointerover">
         <Setter Property="Background" Value="{StaticResource Brush.Accent.Hover}"/>
    </Style>

    <!-- ============================================ -->
    <!-- ACTION BUTTONS (Start/Cancel Copy) -->
    <!-- ============================================ -->
    <Style Selector="Button.Action">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="Button.Action.Start">
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
    </Style>
    <Style Selector="Button.Action.Start:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Hover}"/>
    </Style>
    <Style Selector="Button.Action.Start:pressed">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Pressed}"/>
    </Style>

    <Style Selector="Button.Action.Cancel">
        <Setter Property="Background" Value="{StaticResource Brush.Error}"/>
    </Style>
    <Style Selector="Button.Action.Cancel:pointerover">
        <Setter Property="Background" Value="#FF6E60"/>
    </Style>
    <Style Selector="Button.Action.Cancel:pressed">
        <Setter Property="Background" Value="#C03025"/>
    </Style>


    <!-- ============================================ -->
    <!-- HELPER STYLES (Added for Strict Layout)      -->
    <!-- ============================================ -->
    <Style Selector="TextBlock.Title">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Title}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>

    <Style Selector="TextBlock.Label">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Standard}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBox.Input">
         <Setter Property="Background" Value="#101010"/> <!-- Brush.Input -->
         <Setter Property="BorderThickness" Value="1"/>
         <Setter Property="BorderBrush" Value="#444444"/>
         <Setter Property="CornerRadius" Value="0"/>
         <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
         <Setter Property="Height" Value="26"/>
         <Setter Property="Padding" Value="4,0"/>
         <Setter Property="FontSize" Value="{StaticResource Font.Size.Body}"/>
         <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="TextBox.Input:focus">
         <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
    </Style>
    <Style Selector="TextBox.Input:pointerover">
         <Setter Property="BorderBrush" Value="#666666"/>
    </Style>

    <!-- BUTTON.PRIMARY (Filled Accent) -->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style Selector="Button.Primary:pointerover">
         <Setter Property="Background" Value="{DynamicResource Brush.Accent.Hover}"/>
    </Style>
    <Style Selector="Button.Primary:pressed">
         <Setter Property="Background" Value="{DynamicResource Brush.Accent.Pressed}"/>
    </Style>
    <Style Selector="Button.Primary:disabled">
         <Setter Property="Background" Value="#333333"/>
         <Setter Property="Foreground" Value="#666666"/>
    </Style>

    <!-- BUTTON.SECONDARY (Outlined) -->
    <Style Selector="Button.Secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
    </Style>
    <Style Selector="Button.Secondary:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
    </Style>

</Styles>
