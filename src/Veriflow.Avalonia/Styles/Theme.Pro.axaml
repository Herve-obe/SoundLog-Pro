<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================ -->
    <!-- COLOR RESOURCES (From WPF Theme.Pro.xaml) -->
    <!-- ============================================ -->
    <Style>
        <Style.Resources>
            <!-- Primary Colors -->
            <Color x:Key="Color.Background.Deep">#121212</Color>
            <Color x:Key="Color.Background.Panel">#1E1E1E</Color>
            <Color x:Key="Color.Background.Elevated">#252526</Color>
            <Color x:Key="Color.Background.Hover">#2D2D30</Color>
            
            <!-- Accent Colors -->
            <Color x:Key="Color.Accent.Video">#1A4CB1</Color>
            <Color x:Key="Color.Accent.Video.Hover">#3565C8</Color>
            <Color x:Key="Color.Accent.Video.Pressed">#123680</Color>
            
            <Color x:Key="Color.Accent.Audio">#E64B3D</Color>
            <Color x:Key="Color.Accent.Audio.Hover">#FF6E60</Color>
            <Color x:Key="Color.Accent.Audio.Pressed">#C03025</Color>
            
            <!-- Text Colors -->
            <Color x:Key="Color.Text.Primary">#FFFFFF</Color>
            <Color x:Key="Color.Text.Secondary">#CCCCCC</Color>
            <Color x:Key="Color.Text.Tertiary">#999999</Color>
            <Color x:Key="Color.Text.Disabled">#6E6E6E</Color>
            
            <!-- Border & Divider -->
            <Color x:Key="Color.Border">#3F3F46</Color>
            <Color x:Key="Color.Divider">#2D2D30</Color>
            
            <!-- Status Colors -->
            <Color x:Key="Color.Success">#4EC9B0</Color>
            <Color x:Key="Color.Warning">#CE9178</Color>
            <Color x:Key="Color.Error">#F48771</Color>
            
            <!-- Brushes -->
            <SolidColorBrush x:Key="Brush.Background.Primary" Color="{StaticResource Color.Background.Deep}"/>
            <SolidColorBrush x:Key="Brush.Background.Secondary" Color="{StaticResource Color.Background.Panel}"/>
            <SolidColorBrush x:Key="Brush.Background.Deep" Color="{StaticResource Color.Background.Deep}"/>
            <SolidColorBrush x:Key="Brush.Background.Panel" Color="{StaticResource Color.Background.Panel}"/>
            <SolidColorBrush x:Key="Brush.Background.Elevated" Color="{StaticResource Color.Background.Elevated}"/>
            <SolidColorBrush x:Key="Brush.Background.Hover" Color="{StaticResource Color.Background.Hover}"/>
            
            <SolidColorBrush x:Key="Brush.Accent.Video" Color="{StaticResource Color.Accent.Video}"/>
            <SolidColorBrush x:Key="Brush.Accent.Video.Hover" Color="{StaticResource Color.Accent.Video.Hover}"/>
            <SolidColorBrush x:Key="Brush.Accent.Video.Pressed" Color="{StaticResource Color.Accent.Video.Pressed}"/>
            
            <SolidColorBrush x:Key="Brush.Accent.Audio" Color="{StaticResource Color.Accent.Audio}"/>
            <SolidColorBrush x:Key="Brush.Accent.Audio.Hover" Color="{StaticResource Color.Accent.Audio.Hover}"/>
            <SolidColorBrush x:Key="Brush.Accent.Audio.Pressed" Color="{StaticResource Color.Accent.Audio.Pressed}"/>
            
            <!-- Official Accent Brushes (Global Keys) -->
            <SolidColorBrush x:Key="VideoAccentBrush" Color="#1A4CB1"/>
            <SolidColorBrush x:Key="AudioAccentBrush" Color="#E64B3D"/>
            
            <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
            <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Text.Secondary}"/>
            <SolidColorBrush x:Key="Brush.Text.Tertiary" Color="{StaticResource Color.Text.Tertiary}"/>
            <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{StaticResource Color.Text.Disabled}"/>
            
            <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>
            <SolidColorBrush x:Key="Brush.Divider" Color="{StaticResource Color.Divider}"/>
            
            <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
            <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}"/>
            <SolidColorBrush x:Key="Brush.Error" Color="{StaticResource Color.Error}"/>
            
            <!-- Dynamic Accent Brush (will be set by code) -->
            <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent.Video}"/>
            <SolidColorBrush x:Key="Brush.Accent.Hover" Color="{StaticResource Color.Accent.Video.Hover}"/>
            <SolidColorBrush x:Key="Brush.Accent.Pressed" Color="{StaticResource Color.Accent.Video.Pressed}"/>
            
            <!-- Font Sizes (WPF Legacy Parity) -->
            <x:Double x:Key="Font.Size.Small">12</x:Double>
            <x:Double x:Key="Font.Size.Standard">14</x:Double>
            <x:Double x:Key="Font.Size.Body">14</x:Double>
            <x:Double x:Key="Font.Size.Medium">16</x:Double>
            <x:Double x:Key="Font.Size.Header">24</x:Double>
            <x:Double x:Key="Font.Size.Title">20</x:Double>

            <!-- ============================================ -->
            <!-- LEGACY NAVIGATION STYLES                     -->
            <!-- ============================================ -->
            <ControlTheme x:Key="NavButtonStyle" TargetType="RadioButton">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Tertiary}"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Grid Background="{TemplateBinding Background}">
                            <StackPanel Orientation="Vertical" Spacing="4" Margin="10,5">
                                 <!-- Icon Container -->
                                 <Border Width="24" Height="24" HorizontalAlignment="Center">
                                     <ContentPresenter Content="{TemplateBinding Tag}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                 </Border>
                                 <!-- Label -->
                                 <TextBlock Text="{TemplateBinding Content}" 
                                            Foreground="{TemplateBinding Foreground}"
                                            FontSize="9" 
                                            FontWeight="SemiBold" 
                                            HorizontalAlignment="Center"
                                            TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter>
                
                <Style Selector="^:pointerover">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
                </Style>
                <Style Selector="^:checked">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Accent}"/>
                </Style>
            </ControlTheme>

            <!-- Video Toggle Style -->
            <ControlTheme x:Key="VideoToggleStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Disabled}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}" Padding="8,4" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <ContentPresenter Content="{TemplateBinding Tag}" Width="16" Height="16"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           Foreground="{TemplateBinding Foreground}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter>
                <Style Selector="^:checked">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Video}"/>
                </Style>
                <Style Selector="^:unchecked">
                     <Setter Property="Opacity" Value="0.5"/>
                </Style>
            </ControlTheme>

            <!-- Audio Toggle Style -->
            <ControlTheme x:Key="AudioToggleStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Disabled}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}" Padding="8,4" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <ContentPresenter Content="{TemplateBinding Tag}" Width="16" Height="16"/>
                                <TextBlock Text="{TemplateBinding Content}" 
                                           Foreground="{TemplateBinding Foreground}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter>
                <Style Selector="^:checked">
                    <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Audio}"/>
                </Style>
                <Style Selector="^:unchecked">
                     <Setter Property="Opacity" Value="0.5"/>
                </Style>
            </ControlTheme>
        </Style.Resources>
    </Style>
    
    <!-- ============================================ -->
    <!-- WINDOW STYLES -->
    <!-- ============================================ -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Panel}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Standard}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================ -->
    
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
    </Style>
    
    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
    </Style>
    
    <!-- PathIcon in Disabled Buttons -->
    <Style Selector="Button:disabled PathIcon">
        <Setter Property="Opacity" Value="0.4"/>
    </Style>
    
    <!-- PathIcon in Disabled ToggleButtons -->
    <Style Selector="ToggleButton:disabled PathIcon">
        <Setter Property="Opacity" Value="0.4"/>
    </Style>

    <!-- ============================================ -->
    <!-- WPF LEGACY BUTTON STYLES (ControlThemes)    -->
    <!-- ============================================ -->
    <Style>
        <Style.Resources>
            <!-- TOGGLE VIEW MODE BUTTON (Offload/Verify style) -->
            <ControlTheme x:Key="ToggleViewModeButton" TargetType="Button">
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="26"/>
                <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="Opacity" Value="0.2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter>
            </ControlTheme>

            <!-- VIEW MODE TOGGLE (Offload/Verify buttons) -->
            <ControlTheme x:Key="ViewModeToggleStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Opacity" Value="0.2"/>
                <Setter Property="Height" Value="26"/>
                <Setter Property="Padding" Value="10,0"/>
            </ControlTheme>

            <!-- CONTEXTUAL ACTION BUTTON (Open, Reset All) -->
            <ControlTheme x:Key="ContextualActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Height" Value="26"/>
                <Setter Property="Padding" Value="8,0"/>
                <Setter Property="FontSize" Value="{StaticResource Font.Size.Body}"/>
                <Setter Property="Cursor" Value="Hand"/>
            </ControlTheme>

            <!-- CLEAR FIELD BUTTON (X button inside textboxes) -->
            <ControlTheme x:Key="ClearFieldButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#666666"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Width" Value="20"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
            </ControlTheme>
        </Style.Resources>
    </Style>

    <!-- Class-based button styles -->
    <Style Selector="Button.ContextualAction">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Body}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.ContextualAction:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Button.ClearField">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.ClearField:pointerover">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    
    <!-- Primary Button Style -->
    <Style Selector="Button.Primary">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button.Primary:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Hover}"/>
    </Style>
    
    <Style Selector="Button.Primary:pressed">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Pressed}"/>
    </Style>

    <Style Selector="Button.Primary:disabled">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Elevated}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Tertiary}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- NAVIGATION BUTTON STYLE -->
    <!-- ============================================ -->
    <Style Selector="RadioButton.NavButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Small}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style Selector="RadioButton.NavButton:checked">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>
    
    <Style Selector="RadioButton.NavButton:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Elevated}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- TEXTBLOCK STYLES -->
    <!-- ============================================ -->
    <Style Selector="TextBlock.Title">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Title}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>
    
    <Style Selector="TextBlock.Header">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Header}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
    </Style>
    
    <Style Selector="TextBlock.Subtitle">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
    </Style>
    
    <Style Selector="TextBlock.Label">
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Standard}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- PAGE HEADER STYLES -->
    <!-- ============================================ -->
    
    <!-- Page Title (e.g., "OFFLOAD", "MEDIA", "PLAYER") -->
    <Style Selector="TextBlock.PageTitle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="20,0,0,0"/>
    </Style>
    
    <!-- Page Icon (24x24) -->
    <Style Selector="PathIcon.PageIcon">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- SECTION HEADER STYLES -->
    <!-- ============================================ -->
    
    <!-- Section Header Text (e.g., "MEDIA SOURCE", "DESTINATION") -->
    <Style Selector="TextBlock.SectionHeader">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Section Icon (17x17) -->
    <Style Selector="PathIcon.SectionIcon">
        <Setter Property="Width" Value="17"/>
        <Setter Property="Height" Value="17"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- FIELD LABEL STYLES -->
    <!-- ============================================ -->
    
    <!-- Field Label (e.g., "MAIN DESTINATION (A)") -->
    <Style Selector="TextBlock.FieldLabel">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- TEXTBOX STYLES -->
    <!-- ============================================ -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Standard}"/>
    </Style>
    
    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- LISTBOX STYLES -->
    <!-- ============================================ -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="8,6"/>
    </Style>
    
    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="{StaticResource Brush.Accent}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- COMBOBOX STYLE -->
    <!-- ============================================ -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>
    
    <Style Selector="ComboBox:pointerover /template/ Border#Background">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Hover}"/>
    </Style>
    
    <Style Selector="ComboBox:focus /template/ Border#Background">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Video}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- TEXTBOX IMPROVEMENTS -->
    <!-- ============================================ -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>
    
    <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Text.Tertiary}"/>
    </Style>
    
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent.Video}"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- SLIDER STYLE -->
    <!-- ============================================ -->
    <Style Selector="Slider">
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Video}"/>
    </Style>
    
    <Style Selector="Slider /template/ Track">
        <Setter Property="Height" Value="4"/>
    </Style>
    
    <Style Selector="Slider /template/ Thumb">
        <Setter Property="Background" Value="{StaticResource Brush.Accent.Video}"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- PROGRESSBAR STYLE -->
    <!-- ============================================ -->
    <Style Selector="ProgressBar">
        <Setter Property="Background" Value="{StaticResource Brush.Background.Deep}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent.Video}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="6"/>
    </Style>
    
    <!-- ============================================ -->
    <!-- NAVIGATION BUTTONS (WPF Style) -->
    <!-- ============================================ -->
    
    <!-- Navigation Button Base -->
    <Style Selector="RadioButton.NavButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="FontSize" Value="9"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                    <StackPanel Orientation="Vertical" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Spacing="4">
                        <!-- Icon (PathIcon) -->
                        <PathIcon x:Name="PART_Icon"
                                 Width="20"
                                 Height="20"
                                 Foreground="{TemplateBinding Foreground}"/>
                        <!-- Label -->
                        <TextBlock Text="{TemplateBinding Content}"
                                  FontSize="{TemplateBinding FontSize}"
                                  FontWeight="{TemplateBinding FontWeight}"
                                  HorizontalAlignment="Center"
                                  Foreground="{TemplateBinding Foreground}"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <!-- Hover State -->
    <Style Selector="RadioButton.NavButton:pointerover">
        <Setter Property="Background" Value="#1AFFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Checked State -->
    <Style Selector="RadioButton.NavButton:checked">
        <Setter Property="Background" Value="#2A2D2E"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <!-- Specific Icons for Each Page (Material Design Filled) -->
    <!-- Specific Icons for Each Page (Material Design Filled) -->
    <Style Selector="RadioButton.NavButton.Offload /template/ PathIcon#PART_Icon">
        <Setter Property="Data" Value="M12,1L3,5V11C3,16.55 6.9,21.74 12,23C17.1,21.74 21,16.55 21,11V5L12,1M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z"/>
    </Style>
    
    <Style Selector="RadioButton.NavButton.Media /template/ PathIcon#PART_Icon">
        <Setter Property="Data" Value="M13,3V9H21V3M13,21H21V11H13M3,21H11V15H3M3,3V13H11V3"/>
    </Style>
    
    <Style Selector="RadioButton.NavButton.Player /template/ PathIcon#PART_Icon">
        <Setter Property="Data" Value="M8,5.14V19.14L19,12.14L8,5.14Z"/>
    </Style>
    
    <Style Selector="RadioButton.NavButton.Sync /template/ PathIcon#PART_Icon">
