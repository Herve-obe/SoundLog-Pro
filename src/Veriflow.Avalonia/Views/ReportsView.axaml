<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Veriflow.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="800"
             x:Class="Veriflow.Avalonia.Views.ReportsView"
             x:DataType="vm:ReportsViewModel"
             Background="{DynamicResource Brush.Background.Primary}"
             DragDrop.AllowDrop="True">

    <UserControl.Styles>
        <!-- DataGrid Customization -->
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource Brush.Background.Elevated}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="*, 350">
        
        <!-- LEFT COLUMN: Report Table -->
        <Grid Grid.Column="0" RowDefinitions="Auto, *, Auto" Margin="20">
            
            <!-- 1. Header Title -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="{Binding ReportTitle}" 
                           Classes="Title"
                           Foreground="White"/>
                <TextBlock Text="{Binding ClipsCountDisplay}" 
                           Classes="Subtitle"
                           FontSize="12"/>
            </StackPanel>

            <!-- 2. Data Grid (Clip List) -->
            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding CurrentReportItems}"
                      SelectedItem="{Binding SelectedReportItem}"
                      GridLinesVisibility="All"
                      CanUserResizeColumns="True"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource Brush.Border}"
                      Background="{DynamicResource Brush.Background.Deep}">
                
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Remove Clip" 
                                  Command="{Binding RemoveFileCommand}" 
                                  CommandParameter="{Binding SelectedReportItem}"/>
                        <Separator/>
                        <MenuItem Header="Clear List" 
                                  Command="{Binding ClearListCommand}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="CLIP NAME" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="SCENE" Binding="{Binding Scene}" Width="100"/>
                    <DataGridTextColumn Header="TAKE" Binding="{Binding Take}" Width="80"/>
                    <DataGridTextColumn Header="DURATION" Binding="{Binding Duration}" Width="100"/>
                    <DataGridTextColumn Header="NOTES" Binding="{Binding ItemNotes}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- 3. Bottom Action Bar (Add Clip) -->
            <Grid Grid.Row="2" ColumnDefinitions="Auto, *" Margin="0,10,0,0">
                <Button Grid.Column="0" 
                        Content="ADD CLIP" 
                        Command="{Binding AddClipCommand}"
                        Classes="Primary"
                        Width="120"/>
            </Grid>
        </Grid>

        <!-- RIGHT COLUMN: Report Settings Form (Side Panel) -->
        <Border Grid.Column="1" 
                Background="{DynamicResource Brush.Background.Secondary}" 
                BorderBrush="{DynamicResource Brush.Border}" 
                BorderThickness="1,0,0,0">
            
            <Grid RowDefinitions="*, Auto">
                
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="15" Margin="20">
                        
                        <TextBlock Text="REPORT SETTINGS" Classes="Header" Opacity="0.7"/>

                        <!-- DATE -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="DATE" Classes="Label"/>
                            <TextBox Text="{Binding Header.ReportDate}"/>
                        </StackPanel>

                        <!-- PROJECT NAME -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="PROJECT NAME" Classes="Label"/>
                            <TextBox Text="{Binding Header.ProjectName}"/>
                        </StackPanel>

                        <!-- SOUND MIXER (Visible mainly for Audio, but useful for generic) -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="SOUND MIXER / OPERATOR" Classes="Label"/>
                            <TextBox Text="{Binding Header.SoundMixer}"/>
                        </StackPanel>

                        <!-- BOOM OP / DATA MANAGER -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="BOOM OP. / DATA MANAGER" Classes="Label"/>
                            <TextBox Text="{Binding Header.BoomOperator}"/>
                        </StackPanel>

                        <!-- LOCATION -->
                        <StackPanel Spacing="5">
                            <TextBlock Text="LOCATION" Classes="Label"/>
                            <TextBox Text="{Binding Header.Location}"/>
                        </StackPanel>

                        <!-- TIMECODE & FILES -->
                        <Grid ColumnDefinitions="*, 10, *">
                            <StackPanel Grid.Column="0" Spacing="5">
                                <TextBlock Text="TC RATE" Classes="Label"/>
                                <TextBox Text="{Binding Header.TimecodeRate}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="5">
                                <TextBlock Text="FILES TYPE" Classes="Label"/>
                                <TextBox Text="{Binding Header.FilesType}"/>
                            </StackPanel>
                        </Grid>

                        <!-- SEPARATOR -->
                        <Separator Height="1" Background="{DynamicResource Brush.Border}" Margin="0,10"/>

                        <!-- CLEAR INFOS BUTTON -->
                        <Button Content="Clear Infos" 
                                Command="{Binding ClearInfosCommand}"
                                Classes="Action Cancel"
                                Height="40"
                                FontSize="14"
                                HorizontalAlignment="Stretch"/>

                    </StackPanel>
                </ScrollViewer>

                <!-- EXPORT BUTTONS (Fixed at Bottom) -->
                <StackPanel Grid.Row="1" Spacing="10" Background="{DynamicResource Brush.Background.Elevated}" Margin="20">
                    
                    <Button Content="EXPORT SESSION EDL/ALE" 
                            Command="{Binding ExportSessionEDLCommand}" 
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding CanExportSessionEDL}"/>

                    <Button Content="EXPORT PDF REPORT" 
                            Command="{Binding ExportPdfCommand}" 
                            Classes="Primary"
                            HorizontalAlignment="Stretch"
                            Height="40"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
